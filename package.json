{
  "name": "sarwar-portfolio-server",
  "private": true,
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "concurrently \"prisma generate\" \"tsx watch ./server.ts\" \"prisma studio\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "generate": "npx prisma generate",
    "reset": " npx prisma migrate reset",
    "update": " npx prisma db push",
    "studio": "npx prisma studio",
    "seed": "ts-node-dev --respawn --transpile-only src/utils/seed.ts",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "prisma": "^7.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "@prisma/adapter-pg": "^7.3.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.9",
    "pg": "^8.13.3",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  }
}
